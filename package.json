{
  "name": "boy-happy",
  "version": "1.0.0",
  "type": "module",
  "description": "BoyHappy School Management System",
  "scripts": {
    "dev": "bun scripts/dev.ts",
    "dev:app": "bun --hot scripts/dev-app.ts",
    "dev:api": "bun --hot --env-file=.env scripts/dev-api.ts",
    "build": "bun scripts/build.ts",
    "deploy": "bun run build && cd infra && bun cdk deploy --require-approval never",
    "cdk:diff": "cd infra && bun cdk diff",
    "cdk:synth": "cd infra && bun cdk synth",
    "cdk:destroy": "cd infra && bun cdk destroy",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "bun-types": "^1.3.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.916.0",
    "@aws-sdk/client-dynamodb": "^3.916.0",
    "@aws-sdk/client-s3": "^3.916.0",
    "@aws-sdk/client-ses": "^3.916.0",
    "@aws-sdk/lib-dynamodb": "^3.916.0",
    "@aws-sdk/s3-request-presigner": "^3.916.0",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "adm-zip": "^0.5.16",
    "amazon-cognito-identity-js": "^6.3.15",
    "aws-cdk": "^2.173.2",
    "aws-cdk-lib": "^2.220.0",
    "axios": "^1.12.2",
    "constructs": "^10.4.2",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "image-size": "^2.0.2",
    "leaflet": "^1.9.4",
    "mammoth": "^1.11.0",
    "preact": "^10.27.2",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-router-dom": "^7.9.4",
    "source-map-support": "^0.5.21",
    "sweetalert2": "^11.26.3",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "zustand": "^5.0.8"
  }
}
